<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivProfile_setInformation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvClearMemory_setInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ivProfile_setInformation"
            android:layout_alignTop="@id/ivProfile_setInformation"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/ivProfile_setInformation"
            android:gravity="center"
            android:text="@string/text_clear_memory"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
